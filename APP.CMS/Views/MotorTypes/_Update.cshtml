@model APP.MODELS.MotorTypes
@using Portal.Utils
<div id="frmUpdate" class="form-horizontal">
    <input hidden id="txtId" value="@Model.Id" />
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3 col-md-3 col-6" required>Tên loại xe</label>
            <div class="col-sm-4 col-md-4 col-12">
                <input type="text" value="@Model.Name" required class="form-control" id="txtName" placeholder="Tên loại xe">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <label required class="col-sm-3 col-md-3 col-6">Hãng xe</label>
            <div class="col-sm-4 col-md-4 col-12">
                <select required id="txtManufac" class="form-control">
                    @{
                        var listManufac = ViewData["listManufac"] as List<APP.MODELS.MotorManufacture>;
                        if (listManufac != null)
                        {
                            foreach (var i in listManufac)
                            {
                                if (i.Id == Model.MotorManufactureID)
                                {
                                    <option selected value="@i.Id">@i.Name</option>
                                }
                                else
                                {
                                    <option value="@i.Id">@i.Name</option>
                                }

                            }
                        }
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <label for="ckbStatus" class="col-sm-3 col-md-3 col-6">Trạng thái</label>
            <div class="col-sm-4 col-md-4 col-6">
                @{
                    if (Model.Status == (byte)StatusEnum.Active)
                    {
                        <input id="ckbStatus" type="checkbox" checked class="custom-control">
                    }
                    else
                    {
                        <input id="ckbStatus" type="checkbox" class="custom-control">
                    }
                }
            </div>
        </div>
    </div>
</div>
<script src="~/js/MotorType/Update.js"></script>