@using APP.MODELS
<div id="frmCreate" class="form-horizontal">
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3 col-md-3 col-6" required>Tên loại xe</label>
            <div class="col-sm-4 col-md-4 col-12">
                <input type="text" required class="form-control" id="txtName" placeholder="Tên loại xe">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <label required class="col-sm-3 col-md-3 col-6">Hãng xe</label>
            <div class="col-sm-4 col-md-4 col-12">
                <select required id="txtManufac" class="form-control">
                    @{
                        var listManufac = ViewData["listManufac"] as List<APP.MODELS.MotorManufacture>;
                        if (listManufac != null)
                        {
                            foreach (var i in listManufac)
                            {
                                <option value="@i.Id">@i.Name</option>
                            }
                        }
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <label for="ckbStatus" class="col-sm-3 col-md-3 col-6">Trạng thái</label>
            <div class="col-sm-4 col-md-4 col-6">
                @*@{
                    if ((int)ViewData[nameof(RolesEnum.Approval)] == 1)
                    {
                        <input id="ckbStatus" type="checkbox" class="custom-control">
                    }
                    else
                    {
                        <input id="ckbStatus" disabled type="checkbox" class="custom-control">
                    }
                }*@
                <input id="ckbStatus" type="checkbox" class="custom-control">
            </div>
        </div>
    </div>
</div>
<script src="~/js/MotorType/Create.js"></script>
