@model APP.MODELS.MotorManufacture
@using Portal.Utils
<div id="frmUpdate" class="form-horizontal">
    <div class="form-group">
        <input id="txtId" hidden value="@Model.Id" />
        <div class="row">
            <label class="col-sm-3 col-md-3 col-6" required>Tên hãng xe</label>
            <div class="col-sm-4 col-md-4 col-12">
                <input type="text" required class="form-control" value="@Model.Name" id="txtName" placeholder="Tên hãng xe">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <label for="ckbStatus" class="col-sm-3 col-md-3 col-6">Trạng thái</label>
            <div class="col-sm-4 col-md-4 col-6">
                @{
                    if (Model.Status == (byte)StatusEnum.Active)
                    {
                        <input id="ckbStatus" type="checkbox" checked class="custom-control">
                    }
                    else
                    {
                        <input id="ckbStatus" type="checkbox" class="custom-control">
                    }
                }
                @*@{
                        if ((int)ViewData[nameof(RolesEnum.Approval)] == 1)
                        {
                            <input id="ckbStatus" type="checkbox" class="custom-control">
                        }
                        else
                        {
                            <input id="ckbStatus" disabled type="checkbox" class="custom-control">
                        }
                    }*@
            </div>
        </div>
    </div>
</div>
<script src="~/js/MotorManufac/Update.js"></script>