@using APP.MODELS
@{
    ViewData["Title"] = "Danh sách nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header border-0">
                <div class="row" id="frmFilter">
                    <div class="form-group col-sm-4 col-md-4 col-12">
                        <input id="txtName" type="text" placeholder="Tên nhân viên" class="form-control" />
                    </div>
                    <div class="form-group col-sm-2 col-md-2 col-12">
                        <select id="drJob" class="form-control">
                            @{
                                var listJobPos = ViewData["listJobPos"] as List<APP.MODELS.JobPositions>;
                                if(listJobPos != null)
                                {
                                    <option value="0">Tất cả</option>
                                    foreach (var i in listJobPos)
                                    {
                                       <option value="@i.Id">@i.Name</option>
                                    }
                                }
                                
                            }
                        </select>
                    </div>
                    <div class="col-sm-2 col-md-2 col-6">
                        <button id="btnSearch" class="btn btn-primary">Tìm kiếm</button>
                    </div>
                    <div class="col-sm-4 col-md-4 col-6">
                        @*@{
                            if ((int)ViewData[nameof(RolesEnum.Create)] == 1)
                            {*@
                        <button id="btnCreate" class="btn btn-success float-right">Thêm mới</button>
                        @*}
                            }*@
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div id="dtTable">
            </div>
        </div>
    </div>
</div>
<script src="~/js/Common/Normal.js"></script>
<script src="~/js/Employee/Index.js"></script>

