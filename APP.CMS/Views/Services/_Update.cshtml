@model APP.MODELS.Services
@using Portal.Utils

<div id="frmUpdate" class="form-horizontal">
    <input hidden value="@Model.Id" type="text" id="txtId" />
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3 col-md-3 col-6" required>Tên dịch vụ</label>
            <div class="col-sm-7 col-md-7 col-12">
                <input type="text" required value="@Model.Name" class="form-control" id="txtName" placeholder="Tên dịch vụ">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3 col-md-3 col-6" required>Giá</label>
            <div class="col-sm-7 col-md-7 col-12">
                <input type="number" step="1" min="0" value="@decimal.Truncate(Model.Price)" required class="form-control" id="txtPrice" placeholder="Giá">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3 col-md-3 col-6">Ghi chú</label>
            <div class="col-sm-7 col-md-7 col-12">
                <input type="text" value="@Model.Note" class="form-control" id="txtNote" placeholder="Ghi chú">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <label for="ckbStatus" class="col-sm-3 col-md-3 col-6">Trạng thái</label>
            <div class="col-sm-4 col-md-4 col-6">
                @{
                    if (Model.Status == (byte)StatusEnum.Active)
                    {
                        <input id="ckbStatus" type="checkbox" checked class="custom-control">
                    }
                    else
                    {
                        <input id="ckbStatus" type="checkbox" class="custom-control">
                    }
                }
            </div>
        </div>
    </div>
</div>
<script src="~/js/Service/Update.js"></script>