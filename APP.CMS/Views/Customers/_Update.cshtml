@model APP.MODELS.Customers
@using Portal.Utils
<div id="frmUpdate" class="form-horizontal">
    <input hidden id="hdId" value="@Model.Id" />
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3 col-md-3 col-6" required>Tên khách hàng</label>
            <div class="col-sm-4 col-md-4 col-12">
                <input type="text" value="@Model.Name" required class="form-control" id="txtName" placeholder="Tên khách hàng">
            </div>
        </div>
    </div>
        <div class="form-group">
        <div class="row">
            <label class="col-sm-3 col-md-3 col-6">Số điện thoại</label>
            <div class="col-sm-4 col-md-4 col-12">
                <input type="text" value="@Model.Phone" id="txtPhone" class="form-control" placeholder="Số điện thoại" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3 col-md-3 col-6">Ngày sinh</label>
            <div class="col-sm-4 col-md-4 col-12">
                <input type="date" value="@Model.Birth?.ToString("yyyy-MM-dd")" id="txtNS" class="form-control" placeholder="NN/TT/NNNN" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3 col-md-3 col-6">Giới tính</label>
            <div class="col-sm-4 col-md-4 col-12">
                @{
                    if (Model.Sex == true)
                    {
                        <input type="radio" checked name="radioSex" value="1">
                        <label for="male">Nam</label><br>
                        <input type="radio" name="radioSex" value="0">
                        <label for="female">Nữ</label><br>
                    }
                    else
                    {
                        <input type="radio" name="radioSex" value="1">
                        <label for="male">Nam</label><br>
                        <input type="radio" checked name="radioSex" value="0">
                        <label for="female">Nữ</label><br>
                    }
                }

            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3 col-md-3 col-6">Địa chỉ</label>
            <div class="col-sm-4 col-md-4 col-12">
                <input type="text" value="@Model.Address" id="txtAddress" class="form-control" placeholder="Địa chỉ" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <label for="ckbStatus" class="col-sm-3 col-md-3 col-6">Trạng thái</label>
            <div class="col-sm-4 col-md-4 col-6">
                @{
                    if (Model.Status == (byte)StatusEnum.Active)
                    {
                        <input id="ckbStatus" type="checkbox" checked class="custom-control">
                    }
                    else
                    {
                        <input id="ckbStatus" type="checkbox" class="custom-control">
                    }
                }
            </div>
        </div>
    </div>
</div>
<script src="~/js/Customer/Update.js"></script>