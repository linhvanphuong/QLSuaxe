
@using Portal.Utils;
@{
    ViewData["Title"] = "Danh sách hóa đơn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header border-0">
                <div class="row" id="frmFilter">
                    <div class="form-group col-sm-4 col-md-4 col-12">
                        <input id="txtDate" type="date" class="form-control" />
                    </div>
                    <div class="col-sm-2 col-md-2 col-6">
                        <button id="btnSearch" class="btn btn-primary">Tìm kiếm</button>
                    </div>
                    <div class="col-sm-6 col-md-6 col-6">
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div id="dtTable">
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        getData();
        $('#frmFilter').find('#btnSearch').click(function () {
            var time = $('#txtDate').val();
            getData(time);
        })
    })
    function getData(time = "") {
        showLoading();
        $.ajax({
            url: "/danh-sach-hoa-don/get-list?" + "time=" + time,
            method: "Get",
             success: function (response) {
                $('#dtTable').html(response);
                hideLoading()
            }
        })
    }
</script>




