@model APP.MODELS.Accessories
@using Portal.Utils

    <div id="frmUpdate" class="form-horizontal">
        <input hidden value="@Model.Id" type="text" id="txtId" />
        <div class="form-group">
            <div class="row">
                <label class="col-sm-3 col-md-3 col-6" required>Tên phụ tùng</label>
                <div class="col-sm-7 col-md-7 col-12">
                    <input type="text" value="@Model.Name" required class="form-control" id="txtName" placeholder="Tên phụ tùng">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-sm-3 col-md-3 col-6" required>Giá</label>
                <div class="col-sm-7 col-md-7 col-12">
                    <input type="number" value="@decimal.Truncate(Model.Price)" min="0" step="1" required class="form-control" id="txtPrice" placeholder="Giá">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-sm-3 col-md-3 col-6">Số lượng</label>
                <div class="col-sm-7 col-md-7 col-12">
                    <input type="number" value="@Model.Quantity" step="1" min="0" required class="form-control" id="txtQuantity" placeholder="Số lượng">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-sm-3 col-md-3 col-6">Đơn vị tính</label>
                <div class="col-sm-7 col-md-7 col-12">
                    <input type="text" value="@Model.Unit" class="form-control" id="txtUnit" placeholder="Đơn vị tính">
                </div>
            </div>
        </div>
    </div>
<script src="~/js/Accessories/Update.js"></script>