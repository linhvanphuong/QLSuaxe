
@model List<APP.MODELS.Accessories>
@using Portal.Utils
@{ System.Globalization.CultureInfo culture = new System.Globalization.CultureInfo("en-US");
}
<table style="width:100%;height:100%;" id="tblDisplay" class=" table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th style="text-align:center;width:10%;">STT</th>
            <th style="width:40%">Tên phụ tùng</th>
            <th style="width:20%;text-align:right">Số lượng</th>
            <th style="width:20%;text-align:center">Đơn vị tính</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        //@foreach (var item in Model)
        {
            var item = Model[i];
            <tr id="row_@item.Id">
                <td style="text-align:center;width:10%;">@(i+1)</td>
                <td style="width:40%;">@item.Name</td>
                <td style="width:20%;text-align:right">
                    @item.Quantity
                </td>
                <td style="width:20%;text-align:center">
                    @item.Unit
                </td>
            </tr>
        }
    </tbody>
</table>


