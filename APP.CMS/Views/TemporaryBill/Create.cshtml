
@{
    ViewData["Title"] = "Phiếu tạm tính";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using APP.MODELS
@using Portal.Utils;
    <div id="frmCreate" class="form-horizontal row ">
        <div class="form-group">
            <div class="row d-flex justify-content-center">
                <label class="col-sm-2 col-md-2 col-4">Khách hàng</label>
                <select id="drCustomer" class="form-control col-sm-4 col-md-4 col-8">
                    @{
                        var listCustomer = ViewData["listCustomer"] as List<APP.MODELS.Customers>;
                        if (listCustomer != null)
                        {
                            <option value="0">Chọn</option>
                            foreach (var i in listCustomer)
                            {
                                <option value="@i.Id">
                                    @i.Name
                                </option>
                            }
                        }
                    }
                </select>
                <label class="col-sm-2 col-md-2 col-4">Loại xe</label>
                <select id="drMotorType" class="form-control col-sm-4 col-md-4 col-8">
                    @{
                        var listMotorType = ViewData["listMotorType"] as List<APP.MODELS.MotorTypes>;
                        if (listMotorType != null)
                        {
                            <option value="0">Chọn</option>
                            foreach (var i in listMotorType)
                            {
                                <option value="@i.Id">
                                    @i.Name
                                </option>
                            }
                        }
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="row d-flex justify-content-center">
                <label class="col-sm-2 col-md-2 col-4">Quầy sửa</label>
                <select id="drMotorLift" class="form-control col-sm-4 col-md-4 col-8">
                    @{
                        var listMotorLift = ViewData["listMotorLift"] as List<APP.MODELS.MotorLifts>;
                        if (listMotorLift != null)
                        {
                            <option value="0">Chọn</option>
                            foreach (var i in listMotorLift)
                            {
                                <option value="@i.Id">
                                    @i.Name
                                </option>
                            }
                        }
                    }
                </select>
                <label class="col-sm-2 col-md-2 col-4">Giờ vào</label>
                @{
                    string txtTimeIn = ViewData["timeIn"] as string;
                }
                <label id="txtTimeIn" class="col-sm-4 col-md-4 col-4">@txtTimeIn</label>
            </div>
        </div>
    </div>
<div class="form-horizontal">
    <div class="d-flex justify-content-center">
        <button class="btn btn-danger mr-1" id="btnExist">Trở về</button> <button class="btn btn-success" id="btnCreate">Lưu</button>
    </div>
</div>
<script src="~/js/Bill/Create.js"></script>
